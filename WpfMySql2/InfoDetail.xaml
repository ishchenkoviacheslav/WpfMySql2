        </Button>-->
        <TextBox x:Name="kundenNrtxt" IsReadOnly="True" TextWrapping="Wrap" Text="" FontSize="14" IsTabStop="False" Grid.Column="1" Margin="3"/>
        <Label x:Name="mobil" Content="Mobil:" HorizontalAlignment="Right" Margin="0,3,3,3" VerticalAlignment="Center" FontSize="14" Padding="3" Grid.Column="7" Grid.Row="1"/>
        <Label x:Name="Ort" Content="Ort:" HorizontalAlignment="Right" Margin="0,4,3,4" VerticalAlignment="Center" FontSize="14" HorizontalContentAlignment="Stretch" Padding="3" Grid.Column="7"/>
        <Label x:Name="EMail" Content="E-Mail:" HorizontalAlignment="Right" Margin="0,3,3,3" VerticalAlignment="Center" FontSize="14" Padding="3" Grid.Column="5" Grid.Row="2"/>
        <Label x:Name="Telefon" Content="Telefon:" HorizontalAlignment="Right" Margin="0,3,3,3" FontSize="14" Padding="3" Grid.Column="5" Grid.Row="1" VerticalAlignment="Center"/>
        <Label x:Name="PLZ" Content="PLZ:" Margin="0,4,3,4" FontSize="14" Padding="3" Grid.Column="5" HorizontalAlignment="Right" VerticalAlignment="Center" HorizontalContentAlignment="Right"/>
