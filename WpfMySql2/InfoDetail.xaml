        <Label x:Name="Benerkung" Content="Bemerkung:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" Padding="0" Grid.Row="6"/>
        <TextBox x:Name="BemerkungTxt" ToolTip="Seriennummer" TabIndex="6" Margin="3" TextWrapping="Wrap" Text="" FontSize="14" IsReadOnly="True" IsTabStop="False" Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="6"/>
        <TextBox x:Name="passKundenTxt" ToolTip="Seriennummer" TabIndex="6" Margin="3,3,3,3.667" TextWrapping="Wrap" Text="" FontSize="14" IsReadOnly="True" IsTabStop="False" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="7"/>
        <Label x:Name="Muster" Content="Muster:" FontSize="14" Padding="3" Grid.Column="1" Grid.Row="8" HorizontalContentAlignment="Right" Margin="0,0,3,3" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <Grid x:Name="GridMust" Grid.Column="3" Grid.Row="7" Grid.ColumnSpan="2" Margin="3" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="33*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="33*"/>
                <ColumnDefinition Width="33*"/>
                <ColumnDefinition Width="33*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="mustBut1" ToolTip="0" Content="1" Margin="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="mustBut2" ToolTip="0" Content="2" Margin="3" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="mustBut3" ToolTip="0" Content="3" Margin="3" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="mustBut4" ToolTip="0" Content="4" Margin="3" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="mustBut5" ToolTip="0" Content="5" Margin="3" Grid.Row="1" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="mustBut6" ToolTip="0" Content="6" Margin="3" Grid.Row="1" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="mustBut7" ToolTip="0" Content="7" Margin="3" Grid.Row="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="mustBut8" ToolTip="0" Content="8" Margin="3" Grid.Row="2" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="mustBut9" ToolTip="0" Content="9" Margin="3" Grid.Row="2" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <!--<TextBox x:Name="textMuster1" Grid.Column="0" Grid.Row="0" MaxLength="1" Margin="2,2,21,2" TextWrapping="Wrap" Text="" FontSize="14" IsReadOnly="True" IsTabStop="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox x:Name="textMuster2" Grid.Column="1" Grid.Row="0" MaxLength="1" Margin="2" TextWrapping="Wrap" Text="" FontSize="14" IsReadOnly="True" IsTabStop="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox x:Name="textMuster3" Grid.Column="2" Grid.Row="0" MaxLength="1" Margin="2" TextWrapping="Wrap" Text="" FontSize="16" IsReadOnly="True" IsTabStop="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox x:Name="textMuster4" Grid.Column="0" Grid.Row="1" MaxLength="1" Margin="2" TextWrapping="Wrap" Text="" FontSize="14" IsReadOnly="True" IsTabStop="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox x:Name="textMuster5" Grid.Column="1" Grid.Row="1" MaxLength="1" Margin="2" TextWrapping="Wrap" Text="" FontSize="14" IsReadOnly="True" IsTabStop="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox x:Name="textMuster6" Grid.Column="2" Grid.Row="1" MaxLength="1" Margin="2" TextWrapping="Wrap" Text="" FontSize="16" IsReadOnly="True" IsTabStop="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox x:Name="textMuster7" Grid.Column="0" Grid.Row="2" MaxLength="1" Margin="2" TextWrapping="Wrap" Text="" FontSize="14" IsReadOnly="True" IsTabStop="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox x:Name="textMuster8" Grid.Column="1" Grid.Row="2" MaxLength="1" Margin="2" TextWrapping="Wrap" Text="" FontSize="14" IsReadOnly="True" IsTabStop="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox x:Name="textMuster9" Grid.Column="2" Grid.Row="2" MaxLength="1" Margin="2" TextWrapping="Wrap" Text="" FontSize="16" IsReadOnly="True" IsTabStop="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox x:Name="textMuster1_Copy" Grid.Column="0" Grid.Row="0" MaxLength="1" Margin="20,2,3,2" TextWrapping="Wrap" Text="" FontSize="14" IsReadOnly="True" IsTabStop="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>-->
        </Grid>
        <Label x:Name="von" Content="Von:" FontSize="14" Padding="3" Grid.Column="2" Grid.Row="10" HorizontalAlignment="Right" Margin="0,3,3,3"/>
        <TabControl x:Name="tabControlAuftrag" Margin="3" Grid.Column="5" Grid.ColumnSpan="4" Grid.Row="4" Grid.RowSpan="8" HorizontalContentAlignment="Left" VerticalContentAlignment="Top">
            <TabItem Header="Fehlerbeschreibung" x:Name="Fehlerbeschreibung">
                <TextBox x:Name="FehlerbeschreibungTxt" TextWrapping="Wrap" Text="" FontSize="14" IsReadOnly="True" IsTabStop="False"/>
            </TabItem>
            <TabItem Header="Interner Vermerk" x:Name="InternerVermerk">
                <TextBox x:Name="InternerVermerkTxt" TextWrapping="Wrap" Text="" FontSize="14" TabIndex="2"/>
            </TabItem>
            <TabItem x:Name="status" Header="Status">
                <Grid Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="252*"/>
                        <RowDefinition Height="43*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="33*"/>
                        <ColumnDefinition Width="33*"/>
                        <ColumnDefinition Width="33*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="listBoxStatus" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Margin="3"/>
                    <TextBox x:Name="textBoxHeader" Grid.Column="0" Grid.Row="1" TextWrapping="Wrap" Text="" Margin="3"/>
                    <TextBox x:Name="textBoxData" TextWrapping="Wrap" Text="" Margin="3" Grid.Row="1" Grid.Column="1"/>
