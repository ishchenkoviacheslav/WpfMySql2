        <TextBox x:Name="maxPrice" TabIndex="5" Margin="3" TextWrapping="Wrap" Text="" FontSize="14" IsReadOnly="True" IsTabStop="False" Grid.Column="1" Grid.Row="10"/>
        <Label x:Name="labelPrevSerialNum" Content="Seriennr:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" Padding="3" Grid.Row="5"/>
