        <TextBox x:Name="anredeTxt" IsReadOnly="True" TextWrapping="Wrap" Text="" FontSize="14" IsTabStop="False" HorizontalContentAlignment="Stretch" Margin="3" Grid.Column="3" Grid.ColumnSpan="2"/>
