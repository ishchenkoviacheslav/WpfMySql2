        <Button x:Name="btnAbschlissen" IsCancel="True" Content="Abschlissen" HorizontalAlignment="Right" Margin="0,0,132,6" VerticalAlignment="Bottom" Width="119" Height="31" Click="ButtonForEsc_Click" Grid.Column="6" Grid.ColumnSpan="3" Grid.Row="12"/>
        <Button x:Name="Muser" Content="Muster" Grid.Column="2" Margin="3,4.333,3,3" Grid.Row="8" Click="Muser_Click"/>
