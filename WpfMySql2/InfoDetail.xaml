                </Grid>
            </TabItem>
            <TabItem x:Name="repBericht" Header="Reparaturbericht" TabIndex="2">
                <TextBox x:Name="reparBericht" TabIndex="3"/>
            </TabItem>
            <TabItem x:Name="tabArtikel" Header="Artikel">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="252*"/>
                        <RowDefinition Height="43*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="33*"/>
                        <ColumnDefinition Width="33*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="DataGridArtikel" SelectionMode="Single" SelectionUnit="FullRow" IsReadOnly="True" Margin="3" Grid.ColumnSpan="2"/>
                    <Button x:Name="btnAddArtikel" Content="Add" Margin="3" Click="btnAddArtikel_Click" Grid.Row="1"/>
                    <Button x:Name="btnDelArtikel" Content="entfernen" Margin="3" Click="btnDelArtikel_Click" Grid.Row="1" Grid.Column="1"/>
