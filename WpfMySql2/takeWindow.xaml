        xmlns:local="clr-namespace:WpfMySql2"
        mc:Ignorable="d"
        Title="Auftrag" Height="676.5"  Width="978">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36*"/>
