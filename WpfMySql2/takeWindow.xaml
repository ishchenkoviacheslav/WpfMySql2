            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="33*"/>
                <ColumnDefinition Width="33*"/>
                <ColumnDefinition Width="33*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="textMuster1" MaxLength="1" Margin="3" TextWrapping="Wrap" Text="" FontSize="16" TabIndex="16"/>
            <TextBox x:Name="textMuster2" MaxLength="1" Margin="3" TextWrapping="Wrap" Text="" FontSize="16" TabIndex="17" Grid.Column="1"/>
